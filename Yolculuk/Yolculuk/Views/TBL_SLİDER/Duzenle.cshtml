@model Yolculuk.Models.TBL_SLİDER

@{
    ViewBag.Title = "Düzenle";
    Layout = "~/Views/Template/Admin_Template.cshtml";
}

<h2 style="text-align:center;color:red">SLİDER RESİM DÜZENLE</h2>

@using (Html.BeginForm("Duzenle", "TBL_SLİDER", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        <p class="control-label col-md-2">BÜYÜK BAŞLIK</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.buyuk_baslik, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.buyuk_baslik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">KISA BAŞLIK</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.kısa_baslik, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.kısa_baslik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">RESİM YOLU</p>
        <div class="col-md-6">
            <div class="form-control">
                <input type="file" name="file" />
                @Html.ValidationMessageFor(model => model.resim_yolu, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Duzenle" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div style="margin-left:1%">
    @Html.ActionLink("Slider Gösterme", "SliderGosterme")
</div>
