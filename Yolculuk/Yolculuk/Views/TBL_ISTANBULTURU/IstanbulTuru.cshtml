@model IEnumerable<Yolculuk.Models.TBL_ISTANBULTURU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Template/Admin_Template.cshtml";
}

<h2 style="text-align:center;color:red">İSTANBUL TUR RESİMLERİ</h2>
<p>
    @Html.ActionLink("Yeni Tur", "Ekle")
</p>
<table class="table">
    <tr>
        <th>
           <p>BAŞLIK</p>
        </th>
        <th>
            <p>RESİM</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.baslik)
        </td>
        <td>
            <img src="~/Content/img/hizmetler/SehirTuru/@item.resimadi" style="width:50px;height:50px" />
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Duzenle", new { id=item.id }) |
            @Html.ActionLink("Sil", "Sil", new { id=item.id })
        </td>
    </tr>
}

</table>
