@model Yolculuk.Models.TBL_ISTANBULTURU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Template/Admin_Template.cshtml";
}

<h2 style="text-align:center;color:red">İSTANBUL TUR RESİM DUZENLE</h2>

@using (Html.BeginForm("Duzenle", "TBL_ISTANBULTURU", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <p class="control-label col-md-2">BAŞLIK</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.baslik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.baslik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">RESİM SEÇ</p>
            <div class="col-md-10">
                <input type="file" name="file" />
                @Html.ValidationMessageFor(model => model.resimadi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="DÜZENLE" class="btn btn-default" />| @Html.ActionLink("İSTANBUL TUR RESİMLERİ", "IstanbulTuru")
            </div>
        </div>
    </div>
}

