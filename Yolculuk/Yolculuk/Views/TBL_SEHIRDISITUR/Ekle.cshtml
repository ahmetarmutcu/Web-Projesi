@model Yolculuk.Models.TBL_SEHIRDISITUR

@{
    ViewBag.Title = "ŞEHİR DIŞI TUR EKLE";
    Layout = "~/Views/Template/Admin_Template.cshtml";
}

<h2 style="text-align:center;color:red">ŞEHİR DIŞI TUR EKLE</h2>


@using (Html.BeginForm("Ekle", "TBL_SEHIRDISITUR", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label col-md-2">RESİM BAŞLIK</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.baslik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.baslik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">BİLGİ</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.slider_bilgi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.slider_bilgi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">SLİDER RESİM</p>
            <div class="col-md-10">
               <input type="file" name="file" />
                @Html.ValidationMessageFor(model => model.slider_resim, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           <p class = "control-label col-md-2">İL SEÇİNİZ</p>
            <div class="col-md-10">
                @Html.DropDownList("il_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.il_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="KAYDET" class="btn btn-default" />||  @Html.ActionLink("GÖSTER", "Goster")
            </div>
        </div>
    </div>
}

