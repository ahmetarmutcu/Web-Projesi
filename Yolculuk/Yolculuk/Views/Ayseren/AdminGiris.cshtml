@model Yolculuk.Models.TBL_ADMIN
@{
    ViewBag.Title = "AdminGiris";
    Layout = "~/Views/Template/Ayseren_Template.cshtml";
}
<h2 style="text-align:center;color:orangered;margin-top:12%">Admin Giris</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label col-md-2">KULLANICI ADI</p>
            <div class="col-md-5">
                @Html.EditorFor(model => model.kullaniciadi, new { htmlAttributes = new { @class = "form-control ", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.kullaniciadi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-2">ŞİFRE</p>
            <div class="col-md-5">
                @Html.EditorFor(model => model.sifre, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.sifre, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="GİRİŞ" class="btn btn-blue" />
            </div>
        </div>
    </div>
}


