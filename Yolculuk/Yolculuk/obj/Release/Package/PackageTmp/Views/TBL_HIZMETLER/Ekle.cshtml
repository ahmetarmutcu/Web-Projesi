@model Yolculuk.Models.TBL_HIZMETLER

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Template/Admin_Template.cshtml";
}

<h2 style="text-align:center;color:red">HİZMET EKLE</h2>

@using (Html.BeginForm("Ekle", "TBL_HIZMETLER", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class = "control-label col-md-2" >BAŞLIK</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.baslik, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.baslik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">RESİM SEÇ</p>
            <div class="col-md-10">
              <input type="file" name="file", autocomplete = "off"  />
                @Html.ValidationMessageFor(model => model.resimadi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">RESİM YÖNLENDİRME</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.resimyonlendirme, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.resimyonlendirme, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="EKLE" class="btn btn-default" />|@Html.ActionLink("Tüm Hizmetler", "Hizmetler")
            </div>
        </div>
    </div>
}

    
