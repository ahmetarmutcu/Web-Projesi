@model TelefonRehberi.Models.Calisanlar
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<body>

    @using (Html.BeginForm())

    {
        <div style="text-align:center;color:red"><h6><b>@ViewBag.mesaj</b></h6></div>
        @Html.AntiForgeryToken()


        <div class="content-wrapper">
            <div class="container">

                <div >
                    <h2 style="margin-left:10%;margin-top:2%">ADMİN GİRİŞ</h2><br />
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <div class="panel panel-info">
                            <div class="panel-body">

                                <form role="form">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                    <div class="form-group">
                                        @Html.LabelFor(model => model.KullaniciAdi, htmlAttributes: new { @class = "control-label col-md-5" })

                                        @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })

                                        @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Sifre, htmlAttributes: new { @class = "control-label col-md-5" })

                                        @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })

                                    </div>


                                    <h3>@ViewBag.Hata</h3>
                                    <div class="form-group">

                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Giris" class="btn btn-default" style="float:right;background-color:black;" />
                                        </div>
                                    </div>
                                </form>
                            </div>

                            
                        </div>
                       
                    </div>
                    <img src="~/img/telefonRehberi.jpg" />
                </div>
             <div style="width:100%;height:50%;background-color:black;top:10%;">
                <h1 style="text-align:center;padding-top:1%">Telefon Admin Sayfasına Hoşgeldiniz</h1>
             </div>
            </div>


        </div>


        <div style="margin-bottom:10%"></div>
    }
    <script src="~/Scripts/js/custom.js"></script>
   
    <script src="~/Scripts/js/jqBootstrapValidation.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/js/main.js"></script>
</body>
</html>

}


