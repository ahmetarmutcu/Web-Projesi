@model WebPdfOdev.Models.PdfModel

@{
    ViewBag.Title = "OgretmenPdfDüzenle";
    Layout = "~/Views/Shared/OgretmenPanel.cshtml";
}

<h2 style="text-align:center">@WebPdfOdev.Resources.OgretmenPaneli.DosyaEkle.ogretmendosyaduzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ıd)

        <div class="form-group">
            <div class="control-label col-md-2">
                @WebPdfOdev.Resources.OgretmenPaneli.DosyaEkle.dosyaadi
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.pdfAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pdfAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                @WebPdfOdev.Resources.OgretmenPaneli.DosyaEkle.Dosyaseciniz
            </div>
            <div class="col-md-8">
                <input class="form-control" type="file" name="file" />
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                @WebPdfOdev.Resources.OgretmenPaneli.DosyaEkle.Açıklama
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.pdfAciklama, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pdfAciklama, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@WebPdfOdev.Resources.Döküman.AdminDokuman.degişiklikbutton" class="btn btn-default" />
    @Html.ActionLink(WebPdfOdev.Resources.OgretmenPaneli.DosyaEkle.ogretmendosyagör , "OgretmenDosyalari")

            </div>
        </div>
    </div>
}


