@model WebPdfOdev.Models.Uye

@{
    ViewBag.Title = WebPdfOdev.Resources.Home.ÜyeOl;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<body>

    @using (Html.BeginForm())

    {
        
        @Html.AntiForgeryToken()

        
        <div class="content-wrapper">
            <div class="container">
                <div style="text-align:center;color:red"><h6><b>@ViewBag.mesaj</b></h6></div>
                <div style="margin-left:3%">
                    <h2 style="text-align:center">@WebPdfOdev.Resources.UyeOl.üyeolbaslik</h2><br />
                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <div class="panel panel-info">
                            <div class="panel-body">

                                <form role="form">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.uyeAd, htmlAttributes: new { @class = "control-label col-md-6" })

                                        @Html.EditorFor(model => model.uyeAd, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.uyeAd, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.uyeSoyad, htmlAttributes: new { @class = "control-label col-md-6" })

                                        @Html.EditorFor(model => model.uyeSoyad, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.uyeSoyad, "", new { @class = "text-danger" })

                                    </div>  
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Kullanaciadi, htmlAttributes: new { @class = "control-label col-md-6" })

                                        @Html.EditorFor(model => model.Kullanaciadi, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.Kullanaciadi, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-7" })

                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Sifre, htmlAttributes: new { @class = "control-label col-md-7" })

                                        @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SifreTekrarı, htmlAttributes: new { @class = "control-label col-md-7" })

                                        @Html.EditorFor(model => model.SifreTekrarı, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.SifreTekrarı, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Yetkisi, htmlAttributes: new { @class = "control-label col-md-7" })

                                        @Html.DropDownListFor(x => x.yetkiİd, new[]{

                                            new SelectListItem(){Text=WebPdfOdev.Resources.UyeOl.öğretmen,Value="1"},
                                   new SelectListItem(){Text=WebPdfOdev.Resources.UyeOl.öğrenci,Value="2"}


                                  },WebPdfOdev.Resources.Modeller.Uye.seciniz, new { @class = "form-control" })


                                    </div>





                                    <div class="form-group">

                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="@WebPdfOdev.Resources.UyeOl.üyeolbaslik" class="btn btn-default" style="float:right" />
                                        </div>
                                    </div>
                                    @if (ViewBag.Message != null)
                                    {
                                        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
                                        </script>
                                    }
                                </form>
                            </div>

                        </div>

                    </div>

                </div>
                <div style="text-align:center">
                    <span>

                        <b>
                           @WebPdfOdev.Resources.UyeOl.üyenot1<br />@WebPdfOdev.Resources.UyeOl.üyenot2
                            <br />@WebPdfOdev.Resources.UyeOl.üyenot3
                        </b>

                    </span>
                    <br /><br /><br />
                    <div>

                        <img src="~/img/mod/uyeOl.jpg" />
                    </div>

                </div>
            </div>


        </div>


        <div style="margin-bottom:5%"></div>
    }

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
