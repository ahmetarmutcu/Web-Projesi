@model IEnumerable<WebPdfOdev.Models.PdfDokuman>
@{
    ViewBag.Title = WebPdfOdev.Resources.Home.DÖKÜMANLAR;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
