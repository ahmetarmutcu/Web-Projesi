@model IEnumerable<WebPdfOdev.Models.Yorum>
@{
    ViewBag.Title = WebPdfOdev.Resources.Home.İLETİŞİM;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
<!DOCTYPE HTML>
<html lang="en-US">

<body>
    <section id="contact" class="contact">

        <div class="container">
            <div style="margin-left:96px">
                <div class="col-md-9 col-sm-9">
                    <div class="head_title text-center wow zoomIn" data-wow-duration="0.5s">
                        <h2>@WebPdfOdev.Resources.İletisim.iletisimbaslik</h2>
                        <div class="separetor"></div>
                        <p>@WebPdfOdev.Resources.İletisim.iletisimbilgi</p><br />
                    </div>
                </div>
            </div>
          
                <div style="margin-left:80px;">
                    <div class="messsage_contant">
                        <div class="col-md-10 col-sm-10">
                            <div class="single_message_left wow fadeIn" data-wow-duration="1s">
                                <form action="#" id="formid">
                           
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="adisoyadi" autocomplete="off" placeholder="@WebPdfOdev.Resources.İletisim.adınızsoyadınız" >
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="email"autocomplete="off" placeholder="@WebPdfOdev.Resources.İletisim.email">
                                            </div>
                                        </div>
                                    </div>

                                       
                                    <div class="form-group">
                                        <textarea class="form-control" id=yorum rows="8"autocomplete="off" placeholder="@WebPdfOdev.Resources.İletisim.mesaj" ></textarea>
                                    </div>
                                      
                                       
                                        <div class="center-content">
                                            <input type="submit" id="gonder" value="@WebPdfOdev.Resources.İletisim.yorumyapbutton" class="btn btn-lg">
                                        </div>
                            
                                        <!--</div>-->
                                    </form>
                                    <!--</div>-->
                                
                            </div>
                        </div>

                    </div>
                </div>
            
        
          
        </div>

    </section>
    <br /><br />

    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/js/jquery.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#gonder").click(function () {
                var yorumunuz = $("#yorum").val();
                var emailadres = $("#email").val();
                var ziyaretadisoyadi = $("#adisoyadi").val();
                $.ajax({

                    url: '/Home/ziyaretciYorumAt/',
                    data: { yorum: yorumunuz, email: emailadres, adisoyadi: ziyaretadisoyadi },
                    type: 'POST',
                    dataType: 'json',
                    success: function (data) {
                        alert("Yorum basariyla gonderildi " + ziyaretadisoyadi);
                    }

                });
            });
        })

    </script>

</body>
</html>
